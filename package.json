{
  "name": "bears29",
  "version": "0.0.0",
  "description": "Chingu Project by Bears Team 29",
  "scripts": {
    "build":
      "npm run build-js && npm run build-css && echo '\n\n===== building js and scss files for production =====\n\n'",
    "build-css":
      "node-sass --output-style compressed src/styles/style.scss dist/assets/css/style.css",
    "build-js":
      "NODE_ENV=production browserify src/scripts/app.js --transform babelify | uglifyjs > dist/assets/js/app.js",
    "deploy":
      "git push origin master && npm run build && git push heroku master",
    "dev": "NODE_ENV=development node --use_strict server.js",
    "go": "npm run watch && npm run dev",
    "killmongo": "bash kill.sh mongo",
    "start": "NODE_ENV=production node --use_strict server.js",
    "stop": "bash kill.sh",
    "watch":
      "npm run watch-js && npm run watch-css && echo '\n\n===== watching js and scss files in src/, writing changes to dist/ =====\n\n'&",
    "watch-js":
      "watchify src/scripts/app.js --debug --verbose --transform babelify -o dist/assets/js/app.js&",
    "watch-css":
      "node-sass -w --output-style compressed src/styles/style.scss dist/assets/css/style.css&"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chingu-voyage5/Bears-Team-29.git"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015", "react"]
        }
      ]
    ]
  },
  "keywords": [
    "chingu",
    "bears"
  ],
  "author": "Bears Team 29",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chingu-voyage5/Bears-Team-29/issues"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "node-sass": "^3.7.0",
    "uglify-js": "^3.0.24",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.4.2",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "mongoose": "^4.5.3",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "redux-devtools": "^3.4.0"
  },
  "homepage": "https://github.com/chingu-voyage5/Bears-Team-29#readme"
}
